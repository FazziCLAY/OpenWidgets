<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".android.activity.MainActivity"
    tools:menu="@menu/menu_date_widget_configurator">

    <LinearLayout
        android:id="@+id/main_updateChecker_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="#116AFF00"
        android:orientation="vertical"
        android:padding="5sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/main_updateChecker_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/updateChecker_text_VERSION_OUTDATED" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_updateChecker_button_toSite"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/updateChecker_button_toSite"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_updateChecker_button_changeLog"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/updateChecker_button_changeLog"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_updateChecker_button_download"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/updateChecker_button_download"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_button_about"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:text="@string/main_button_about"
            android:textAllCaps="false"
            android:textSize="22sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/main_button_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:text="@string/main_button_settings"
            android:textAllCaps="false"
            android:textSize="22sp"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_text_widgetsIsNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_text_widgetsNotFound"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/main_checkBox_widgetsIdMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_checkbox_idMode"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/widgetsButtonsSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_dateWidgetsButtonsSlot_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_dateWidgetsButtonsSlot_title"
                    android:textColor="#F6E6BE"
                    android:paddingStart="10sp"
                    android:textSize="16sp"
                    android:paddingLeft="10sp"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:id="@+id/main_dateWidgetsButtonsSlot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>