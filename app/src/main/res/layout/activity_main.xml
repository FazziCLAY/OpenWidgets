<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".android.activity.MainActivity">

    <LinearLayout
        android:id="@+id/main_updateChecker_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="#116AFF00"
        android:orientation="vertical"
        android:padding="5sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/main_updateChecker_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/updateChecker_VERSION_OUTDATED" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_updateChecker_button_toSite"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/updateChecker_button_toSite" />

            <Button
                android:id="@+id/main_updateChecker_button_changeLog"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/updateChecker_button_changeLog" />

            <Button
                android:id="@+id/main_updateChecker_button_download"
                style="?android:attr/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/updateChecker_button_download" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_button_about"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:layout_weight="1"
            android:text="@string/button_about"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:backgroundTint="#222222"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/main_button_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:layout_weight="1"
            android:text="@string/button_settings"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:backgroundTint="#222222"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_text_widgetsIsNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_widgetsNotFound"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/main_checkBox_widgetsIdMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_isMode"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/widgetsButtonsSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>