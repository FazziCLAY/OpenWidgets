<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logger_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logger_clear"
            android:textAllCaps="false"
            android:background="#F41C00"/>

        <CheckBox
            android:id="@+id/logger_autoScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logger_autoScroll" />

        <Button
            android:id="@+id/logger_textSizeMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/logger_textSizePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="+"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

    </LinearLayout>





    <ScrollView
        android:id="@+id/logger_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/logger_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
</LinearLayout>